#!/bin/bash
#SBATCH --time=24:00:00
#SBATCH --nodes=1 --ntasks-per-node=1 --cpus-per-task=8
#SBATCH --partition=cpu
#SBATCH --mem=80G
#SBATCH --error=../logs/prepare-ict-from-chunks.%j.err
