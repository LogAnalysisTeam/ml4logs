XDG_RUNTIME_DIR=""

TRAINPATH='/home/cernypro/dev/source/ml4logs/data/processed/Tr-1093568_Ev-6400_Epochs-3_Seed-13/train'
EVALPATH='/home/cernypro/dev/source/ml4logs/data/processed/Tr-1093568_Ev-6400_Epochs-3_Seed-13/eval'

mkdir -p /data/temporary/train
mkdir -p /data/temporary/eval
