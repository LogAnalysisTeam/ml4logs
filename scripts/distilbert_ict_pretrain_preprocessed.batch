cp -R ${EVALPATH}/* /data/temporary/eval

python3 -u ./train_ict_preprocessed_data.py --eval-steps 1000 --save-steps 500 --logging-steps 50 --seed 43 --train-dataset /data/temporary/train --eval-dataset /data/temporary/eval
