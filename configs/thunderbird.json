{
    "pipeline": [
        {
            "action": "download",
            "url": "https://zenodo.org/record/3227177/files/Thunderbird.tar.gz",
            "path": "data/raw/Thunderbird.tar.gz",
            "force": false
        },
        {
            "action": "extract",
            "in_path": "data/raw/Thunderbird.tar.gz",
            "out_dir": "data/raw/Thunderbird",
        },
        {
            "action": "prepare",
            "dataset": "Thunderbird",
            "in_dir": "data/raw/Thunderbird",
            "logs_path": "data/interim/Thunderbird/logs.txt",
            "labels_path": "data/interim/Thunderbird/labels.npy",
            "timedeltas_path": "data/interim/Thunderbird/timedeltas.npy"
        },
        {
            "action": "train_fasttext",
            "logs_path": "data/interim/Thunderbird/logs.txt",
            "model_path": "models/embeddings/Thunderbird/fasttext_skipgram.bin",
            "model_args": {
                "dim": 100,
                "minCount": 10000,
                "minn": 1,
                "maxn": 1,
                "thread": 1,
                "verbose": 2
            }
        },
        {
            "action": "preprocess_fasttext",
            "logs_path": "data/interim/Thunderbird/logs.txt",
            "model_path": "models/embeddings/Thunderbird/fasttext_skipgram.bin",
            "embeddings_path": "data/interim/Thunderbird/fasttext.npy"
        },
        {
            "action": "merge_features",
            "features_paths": [
                "data/interim/Thunderbird/fasttext.npy",
                "data/interim/Thunderbird/timedeltas.npy"
            ],
            "merged_path": "data/interim/Thunderbird/fasttext-timedeltas.npy"
        },
        {
            "action": "aggregate_by_lines",
            "features_path": "data/interim/Thunderbird/fasttext-timedeltas.npy",
            "labels_path": "data/interim/Thunderbird/labels.npy",
            "dataset_path": "data/processed/Thunderbird/fasttext.npz"
        },
        {
            "action": "train_test_models",
            "dataset_path": "data/processed/Thunderbird/fasttext.npz",
            "stats_path": "reports/results/Thunderbird-skipgram-loglizer.json",
            "train_size": 0.2,
            "seed": 14235,
            "models": [
                {
                    "name": "logistic_regression",
                    "args": {
                        "C": 100,
                        "tol": 1e-2,
                        "max_iter": 1000,
                        "random_state": 14235
                    }
                },
                {
                    "name": "decision_tree",
                    "args": {
                        "random_state": 14235
                    }
                },
                {
                    "name": "linear_svc",
                    "args": {
                        "penalty": "l1",
                        "tol": 0.1,
                        "dual": false,
                        "random_state": 14235
                    }
                },
                {
                    "name": "lof",
                    "args": {}
                },
                {
                    "name": "one_class_svm",
                    "args": {}
                },
                {
                    "name": "isolation_forest",
                    "args": {
                        "random_state": 14235
                    }
                },
                {
                    "name": "pca",
                    "args": {
                        "random_state": 14235
                    }
                }
            ]
        }
    ]
}